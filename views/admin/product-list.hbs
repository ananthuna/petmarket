<section class="admin_section">
    <div>
        <h3 class="d-flex justify-content-center">Listed Products</h3>


        <table id="customers">
            <tr>
                <th>Name</th>
                <th>catergory</th>
                <th>price</th>
                <th>Image</th>
                <th></th>

            </tr>
            {{#each products}}
            <tr>

                <td>{{name}}</td>
                <td>{{this.bname}}</td>
                <td>{{price}}</td>
                <td><img class="list_img" src="/image/{{this._id}}.jpg" alt="Card image cap"></td>
                <td>
                    <div class="d-flex justify-content-center">
                        <a href="/admin/edit-product?id={{this._id}}" type="button" class="btn btn-primary mx-1"
                            id="edit">Edit</a>
                        <a href="/admin/delete-product?id={{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.name}}?')">Delete</a>
                    </div>
                </td>
            </tr>
            {{/each}}
            
        </table>
    </div>
</section>